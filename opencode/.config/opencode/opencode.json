{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": {
      "*": "ask",
      "*.env": "deny",
      "*.env.*": "deny"
    },
    "bash": {
      "*": "ask",
      "git status*": "allow",
      "git log*": "allow",
      "git diff*": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "ls *": "allow",
      "bat *": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "find *": "allow",
      "fd *": "allow",
      "wc *": "allow",
      "pwd": "allow",
      "echo *": "allow",
      "which *": "allow",
      "file *": "allow",
      "stat *": "allow",
      "rm *": "ask",
      "npm *": "ask"
    },
    "read": {
      "*": "allow",
      "*.env": "deny"
    },
    "external_directory": "ask"
  },
  "agent": {
    "explore": {
      "temperature": 0.1,
      "model": "anthropic/claude-haiku-4-5"
    }
  },
  "mcp": {
    "FramelinkFigmaMCP": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "figma-developer-mcp",
        "--figma-api-key={env:FIGMA_API_KEY}",
        "--stdio"
      ],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": true
    }
  }
}
